<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pe.edu.upeu.farmafx.control.ProductoController"
      spacing="10" prefWidth="1200" prefHeight="650">
    <children>
        <!-- Barra de filtros (igual que tenías) -->
        <HBox spacing="12" alignment="CENTER_LEFT">
            <children>
                <Label text="Gestión de Productos" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label text="Buscar:"/>
                <TextField fx:id="searchField" promptText="Buscar por nombre, marca o categoría"/>
                <ChoiceBox fx:id="estadoFilter" prefWidth="120"/>
                <ComboBox fx:id="ordenCombo" prefWidth="140"/>
                <Button fx:id="refreshBtn" text="Refresh"/>
                <Button fx:id="salirBtn" text="Salir" onAction="#onSalir" />
            </children>
        </HBox>

        <!-- Formulario simple (igual estilo que categorías/marcas) -->
        <HBox spacing="12" alignment="CENTER_LEFT">
            <children>
                <Label text="Nombre:"/>
                <TextField fx:id="nombreField" promptText="Ej: Paracetamol 500mg" prefWidth="260"/>

                <Label text="Precio:"/>
                <TextField fx:id="precioField" promptText="Ej: 3.50" prefWidth="90"/>

                <Label text="Stock:"/>
                <TextField fx:id="stockField" promptText="Ej: 100" prefWidth="80"/>

                <Label text="Marca:"/>
                <ComboBox fx:id="marcaCombo" prefWidth="160"/>

                <Label text="Categoría:"/>
                <ComboBox fx:id="categoriaCombo" prefWidth="160"/>

                <CheckBox fx:id="activoCheck" text="Activo" selected="true"/>

                <Button fx:id="nuevoBtn" text="Nuevo" minWidth="90" onAction="#onNuevo"/>
                <Button fx:id="guardarBtn" text="Guardar" minWidth="90" defaultButton="true" onAction="#onGuardar"/>
            </children>
        </HBox>

        <!-- Tabla -->
        <TableView fx:id="tabla" prefHeight="520" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="300"/>
                <TableColumn fx:id="colMarca" text="Marca" prefWidth="150"/>
                <TableColumn fx:id="colCategoria" text="Categoría" prefWidth="150"/>
                <TableColumn fx:id="colPrecio" text="Precio" prefWidth="120"/>
                <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
            </columns>
        </TableView>
    </children>
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
</VBox>