<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pe.edu.upeu.farmafx.control.MarcaController"
      spacing="10" prefWidth="1000" prefHeight="650">
    <children>
        <HBox spacing="12" alignment="CENTER_LEFT">
            <children>
                <Label text="GestiÃ³n de Marcas" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label text="Buscar:"/>
                <TextField fx:id="searchField" promptText="Buscar por nombre"/>
                <ChoiceBox fx:id="estadoFilter" prefWidth="120"/>
                <ComboBox fx:id="ordenCombo" prefWidth="120"/>
                <Button fx:id="refreshBtn" text="Refresh"/>
                <Button fx:id="salirBtn" text="Salir" onAction="#onSalir" />
            </children>
        </HBox>

        <HBox spacing="12" alignment="CENTER_LEFT">
            <children>
                <Label text="Nombre:"/>
                <TextField fx:id="nombreField" promptText="Ej: Bayer" prefWidth="320"/>
                <CheckBox fx:id="activoCheck" text="Activo" selected="true"/>
                <Button fx:id="nuevoBtn" text="Nuevo" minWidth="90" onAction="#onNuevo"/>
                <Button fx:id="guardarBtn" text="Guardar" minWidth="90" defaultButton="true" onAction="#onGuardar"/>
            </children>
        </HBox>

        <TableView fx:id="tabla" prefHeight="520">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="520"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="160"/>
            </columns>
        </TableView>
    </children>
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
</VBox>