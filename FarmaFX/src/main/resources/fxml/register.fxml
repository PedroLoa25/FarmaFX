<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pe.edu.upeu.farmafx.control.RegisterController"
            prefWidth="420" prefHeight="260">
    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints prefWidth="160"/>
                <ColumnConstraints prefWidth="220"/>
            </columnConstraints>
            <children>
                <Label text="Crear cuenta"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"
                       GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0"/>

                <Label text="DNI:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="dniField" promptText="8 dígitos"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Contraseña:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordField" promptText="********"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Confirmar:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <PasswordField fx:id="confirmField" promptText="********"
                               GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <HBox spacing="10" alignment="CENTER_RIGHT"
                      GridPane.rowIndex="4" GridPane.columnIndex="1">
                    <children>
                        <Button text="Cancelar" onAction="#cancelar"/>
                        <Button text="Crear cuenta" defaultButton="true" onAction="#crearCuenta"/>
                    </children>
                </HBox>

                <Label fx:id="errorLabel" textFill="red"
                       GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </children>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </GridPane>
    </center>
</BorderPane>