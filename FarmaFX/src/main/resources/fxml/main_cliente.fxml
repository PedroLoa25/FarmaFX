<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainContent" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.farmafx.control.ClienteMainController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Archivo">
                    <items>
                        <!-- El que ya tenías -->
                        <MenuItem mnemonicParsing="false" onAction="#onLogout" text="Cerrar Sesión" />
                        <!-- Separador para organizar mejor -->
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <!-- El nuevo botón de Salir -->
                        <MenuItem mnemonicParsing="false" onAction="#onExit" text="Salir" />
                    </items>
                </Menu>
                <Menu text="Navegación">
                    <items>
                        <MenuItem text="Inicio (Promociones)" />
                        <MenuItem text="Ver Productos por Categoría" />
                    </items>
                </Menu>
                <!-- El nuevo menú de Ayuda -->
                <Menu text="Ayuda">
                    <items>
                        <MenuItem onAction="#onAbout" text="Acerca de" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Promociones y Ofertas Destacadas">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                    <content>
                        <TilePane fx:id="promocionesContainer" hgap="15.0" prefColumns="5" vgap="15.0" />
                    </content>
                    <padding>
                        <Insets top="5.0" />
                    </padding>
                </ScrollPane>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>