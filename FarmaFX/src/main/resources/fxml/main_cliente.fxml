<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pe.edu.upeu.farmafx.control.ClienteMainController"
            fx:id="root"
            prefWidth="960" prefHeight="640">
    <top>
        <MenuBar>
            <menus>
                <Menu text="Archivo">
                    <items>
                        <MenuItem text="Cerrar sesión" onAction="#onLogout"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="Salir" onAction="#onExit"/>
                    </items>
                </Menu>
                <Menu text="Catálogos">
                    <items>
                        <MenuItem text="Categorías" onAction="#onOpenCategorias"/>
                        <MenuItem text="Marcas" onAction="#onOpenMarcas"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="Productos" onAction="#onOpenProductos"/>
                    </items>
                </Menu>
                <!-- Más adelante: menú Compras -->
                <Menu text="Ayuda">
                    <items>
                        <MenuItem text="Acerca de" onAction="#onAbout"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <VBox spacing="12" alignment="CENTER">
            <children>
                <Label text="FarmaFX - Cliente" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <HBox spacing="10">
                    <children>
                        <Label text="DNI:" style="-fx-font-weight: bold;"/>
                        <Label fx:id="dniLabel" text="-"/>
                        <Label text="Rol:" style="-fx-font-weight: bold;"/>
                        <Label fx:id="rolLabel" text="-"/>
                    </children>
                </HBox>
                <Label text="Panel principal del cliente" style="-fx-text-fill: #777;"/>
            </children>
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
        </VBox>
    </center>
</BorderPane>